<h1>Admin List Of Contact Us Messages</h1>

<?php if (count($this->contactMessages)): ?>

<table class="table table-striped">
<thead>
    <tr>
        <th><?= $this->translate('Email') ?></th>
        <th><?= $this->translate('Name') ?></th>
