<tbody>
<?php foreach ($this->contactMessages as $message): ?>
   <tr>
            <td nowrap="true"><?= $this->escapehtml($message['email']) ?></td>
            <td nowrap="true"><?= $this->escapehtml($message['fullname']) ?></td>
